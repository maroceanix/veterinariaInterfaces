public class App extends Application {

    @Override
    public void start(Stage stage) throws IOException {
        FXMLLoader loader = new FXMLLoader(getClass().getResource("/fxml/Login.fxml"));
        Scene scene = new Scene(loader.load());
        stage.setScene(scene);
        stage.setTitle("Biblioteca");
        stage.show();
    }

    @Override
    public void stop() {
        HibernateUtil.close();
    }

    public static void main(String[] args) {
        launch();
    }
}

//LO QUE SIEMPRE SE VE
public class LoginController implements Initializable {

    @FXML private StackPane contenedor;

    @Override
    public void initialize(URL url, ResourceBundle rb) {
        try {
            pongoLogin();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    @FXML
    private void pongoLogin() throws IOException {
        Node vista = FXMLLoader.load(getClass().getResource("/fxml/InicioSesion.fxml"));
        contenedor.getChildren().setAll(vista);
    }

    @FXML
    private void pongoSingUp() throws IOException {
        Node vista = FXMLLoader.load(getClass().getResource("/fxml/FormularioRegistro.fxml"));
        contenedor.getChildren().setAll(vista);
    }
}

//INICIO SESIÓN
public class InicioSesionController implements Initializable {

    @FXML private TextField usuaruiTV;
    @FXML private TextField decodificada;
    @FXML private PasswordField contraseniaTV;
    @FXML private CheckBox checkbox;
    @FXML private Button entrarBT;
    @FXML private Button limpiarBT;

    private UsuarioDAO usuarioDAO = new UsuarioDAOImpl();

    @Override
    public void initialize(URL url, ResourceBundle rb) {
        decodificada.textProperty().bindBidirectional(
            contraseniaTV.textProperty()
        );
        decodificada.setVisible(false);

        checkbox.setOnAction(e -> {
            boolean ver = checkbox.isSelected();
            decodificada.setVisible(ver);
            contraseniaTV.setVisible(!ver);
        });

        entrarBT.setOnAction(e -> {
            try {
                iniciarSesion();
            } catch (IOException ex) {
                ex.printStackTrace();
            }
        });

        limpiarBT.setOnAction(e -> limpiar());
    }

    private void iniciarSesion() throws IOException {
        String usuario = usuaruiTV.getText().trim();
        String contrasenia = contraseniaTV.getText().trim();

        if (usuario.isBlank() || contrasenia.isBlank()) {
            mostrarError("Por favor rellena todos los campos.");
            return;
        }

        Usuario u = usuarioDAO.login(usuario, contrasenia);

        if (u == null) {
            mostrarError("Usuario o contraseña incorrectos.");
            return;
        }

        if (u instanceof Administrador admin) {
            FXMLLoader loader = new FXMLLoader(
                getClass().getResource("/fxml/bibliotecaAdmin.fxml")
            );
            Stage stage = (Stage) entrarBT.getScene().getWindow();
            stage.setScene(new Scene(loader.load()));
            BibliotecaAdminController controller = loader.getController();
            controller.setAdministrador(admin);
            stage.show();

        } else if (u instanceof Estudiante estudiante) {
            FXMLLoader loader = new FXMLLoader(
                getClass().getResource("/fxml/bibliotecaEstudiante.fxml")
            );
            Stage stage = (Stage) entrarBT.getScene().getWindow();
            stage.setScene(new Scene(loader.load()));
            BibliotecaEstudianteController controller = loader.getController();
            controller.setEstudiante(estudiante);
            stage.show();
        }
    }

    private void limpiar() {
        usuaruiTV.clear();
        contraseniaTV.clear();
        decodificada.clear();
        checkbox.setSelected(false);
        decodificada.setVisible(false);
        contraseniaTV.setVisible(true);
    }

    private void mostrarError(String mensaje) {
        Alert alert = new Alert(Alert.AlertType.ERROR);
        alert.setTitle("Error de acceso");
        alert.setContentText(mensaje);
        alert.showAndWait();
    }
}

//REGISTRO CONTROLLER
public class FormularioRegistroController implements Initializable {

    @FXML private TextField correoElectronicoTV;
    @FXML private TextField nombreTV;
    @FXML private TextField usuarioTV;
    @FXML private CheckBox administradorOpcionCB;
    @FXML private PasswordField contraseniaTV;
    @FXML private PasswordField confirmarContraseniaTV;
    @FXML private Button registrarBT;
    @FXML private TextField apellidosTV;
    @FXML private Button limpiarBT;

    private UsuarioDAO usuarioDAO = new UsuarioDAOImpl();

    @Override
    public void initialize(URL url, ResourceBundle rb) {
        registrarBT.setOnAction(e -> registrar());
        limpiarBT.setOnAction(e -> limpiar());
    }

    private void registrar() {
        String correo = correoElectronicoTV.getText().trim();
        String nombre = nombreTV.getText().trim();
        String usuario = usuarioTV.getText().trim();
        String contrasenia = contraseniaTV.getText().trim();
        String confirmar = confirmarContraseniaTV.getText().trim();

        if (correo.isBlank() || nombre.isBlank() || usuario.isBlank() || contrasenia.isBlank()) {
            mostrarError("Todos los campos son obligatorios.");
            return;
        }

        if (!contrasenia.equals(confirmar)) {
            mostrarError("Las contraseñas no coinciden.");
            return;
        }

        if (administradorOpcionCB.isSelected()) {
            Administrador admin = new Administrador();
            admin.setUsuario(usuario);
            admin.setApellidos(apellidosTV.getText().trim());
            admin.setNombre(nombre);
            admin.setEmail(correo);
            admin.setContrasena(contrasenia);
            admin.setFechaAlta(LocalDate.now());
            admin.setActivo(true);
            usuarioDAO.guardar(admin);
        } else {
            Estudiante estudiante = new Estudiante();
            estudiante.setUsuario(usuario);
            estudiante.setNombre(nombre);
            estudiante.setApellidos(apellidosTV.getText().trim());
            estudiante.setEmail(correo);
            estudiante.setContrasena(contrasenia);
            estudiante.setFechaAlta(LocalDate.now());
            estudiante.setActivo(true);
            usuarioDAO.guardar(estudiante);
        }

        mostrarInfo("Usuario registrado correctamente.");
        limpiar();
    }

    private void limpiar() {
        correoElectronicoTV.clear();
        nombreTV.clear();
        usuarioTV.clear();
        contraseniaTV.clear();
        confirmarContraseniaTV.clear();
        administradorOpcionCB.setSelected(false);
    }

    private void mostrarError(String mensaje) {
        Alert alert = new Alert(Alert.AlertType.ERROR);
        alert.setTitle("Error");
        alert.setContentText(mensaje);
        alert.showAndWait();
    }

    private void mostrarInfo(String mensaje) {
        Alert alert = new Alert(Alert.AlertType.INFORMATION);
        alert.setTitle("Registro exitoso");
        alert.setContentText(mensaje);
        alert.showAndWait();
    }
}

